- $this->load->helper('url')

.col-sm-12
    .images-gallery
        - if($images):
            ._gallery-slider.flexslider
                ul.slides
                    - foreach ($images as $image):
                        li
                            img(src!=base_url() + $images_directory + '/' + $image, alt='Some awesome image here')
                    - endforeach
            ._gallery-thumbnsils.flexslider
                ul.slides
                    - foreach ($images as $image):
                        li
                            img(src!=base_url() + $images_directory + '/' + $image, alt='Some awesome image here')
                    - endforeach
        - else:
            .alert.alert-warning
                p
                    strong Oh!
                p
                    | Something went wrong... Please try again later
                p
                    a(href!=base_url())
                        | Ok, I will try now!
        - endif

script(src!=base_url() + 'assets/dist/js/image_grubber/gallery.js')





